<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backonef"
    tools:context=".GameStartActivity">

    <TextView

        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="WELCOME TO GAME"
        android:textAlignment="center"
        android:textColor="#990B0B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="THE HUNGRY FISH"
        android:textAlignment="center"
        android:textColor="#990B0B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yellow Ball : 10 points"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0C0C0B"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black  Ball :   15 points"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0C0C0B"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green  Ball :   20 points"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0C0C0B"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RED BALL IS DANGER"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E20505"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:padding="20dp"
        android:text="START GAME"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

</android.widget.RelativeLayout>